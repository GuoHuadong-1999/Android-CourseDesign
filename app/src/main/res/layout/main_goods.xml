<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:background="@color/colorWhiteBackground">
    <com.loopj.android.image.SmartImageView
            android:id="@+id/image_goods"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/goods"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
        <TextView
                android:id="@+id/tv_logo"
                android:padding="2dp"
                android:background="@color/colorRedBackground"
                android:text="自营"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorWhiteFont"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>
        <TextView
                android:id="@+id/tv_description"
                android:singleLine="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toRightOf="@id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="惠普(HP)星14 青春版 14英寸轻薄窄边框笔记本电脑(R5-3500U 8G 256GSSD FHD IPS)银"
                android:textColor="@color/colorBlackFont"
                android:textSize="14sp"/>
        <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="14sp"
                    android:textColor="@color/colorRedFont"/>
            <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textSize="18sp"
                    android:textColor="@color/colorRedFont"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
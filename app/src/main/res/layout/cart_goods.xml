<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteBackground"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">
    <TextView android:layout_width="match_parent"
              android:layout_height="5dp"
              android:background="@color/colorGrayBackground">
    </TextView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <CheckBox
                android:id="@+id/cb_select_single"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/checkbox_state"
                android:button="@null"
                android:layout_width="25dp"
                android:layout_height="25dp">
        </CheckBox>
        <LinearLayout
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.loopj.android.image.SmartImageView
                    android:id="@+id/goods_image"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/goods"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">
                <TextView
                        android:id="@+id/goods_logo"
                        android:padding="2dp"
                        android:layout_marginRight="10dp"
                        android:text="自营"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhiteFont"
                        android:background="@color/colorRedBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"/>
                <TextView
                        android:layout_toRightOf="@id/goods_logo"
                        android:id="@+id/goods_description"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="惠普(HP)星14 青春版 14英寸轻薄窄边框笔记本电脑(R5-3500U 8G 256GSSD FHD IPS)银"
                        android:textColor="@color/colorBlackFont"
                        android:textSize="14sp"/>
                <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textSize="14sp"
                            android:textColor="@color/colorRedFont"/>
                    <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10000"
                            android:textSize="18sp"
                            android:textColor="@color/colorRedFont"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
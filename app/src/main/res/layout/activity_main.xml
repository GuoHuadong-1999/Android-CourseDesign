<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrayBackground">
    //把整体分为两部分，内容和底部功能栏
    <RelativeLayout
            android:id="@+id/container_content"
            android:layout_above="@id/container_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/container_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorShallowBlueBackground"
            android:layout_alignParentBottom="true">
        <LinearLayout
                android:id="@+id/menu_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/image_main"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/nav_main_click"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="首页"
                    android:layout_gravity="center"
                    android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/menu_classic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/image_classic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/nav_classic_normal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="分类"
                    android:layout_gravity="center"
                    android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/menu_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/image_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/nav_cart_normal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="购物车"
                    android:layout_gravity="center"
                    android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/menu_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/image_me"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/nav_me_normal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="我的"
                    android:layout_gravity="center"
                    android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:background="@color/colorGrayBackground">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:gravity="center">
        <ImageView android:layout_width="75dp"
                   android:layout_height="75dp"
                   android:src="@mipmap/image_default">
        </ImageView>
    </LinearLayout>
    <EditText android:id="@+id/et_name"
              android:paddingLeft="20dp"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@drawable/round"
              android:textColor="@color/colorBlackFont"
              android:textColorHint="@color/colorGrayFont"
              android:hint="请输入用户名"/>
    <EditText android:id="@+id/et_password"
              android:paddingLeft="20dp"
              android:password="true"
              android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@drawable/round"
              android:textColor="@color/colorBlackFont"
              android:textColorHint="@color/colorGrayFont"
              android:hint="请输入密码"/>
    <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="登陆"
            android:textSize="18sp"
            android:background="@drawable/login_button_round"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_regist"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新用户注册"
                android:textColor="@color/colorGrayFont"
                android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/action_bar"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorWhiteBackground"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:textColor="@color/colorBlackFont"
                  android:textSize="18sp"
                  android:text="购物车"/>
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@mipmap/cart_position"/>
    </LinearLayout>
    <ListView
            android:layout_above="@id/rl_information"
            android:id="@+id/lv_goods_content"
            android:layout_below="@id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </ListView>
    <RelativeLayout
            android:id="@+id/rl_information"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/colorGrayBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
                android:id="@+id/cb_select_all"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/checkbox_state"
                android:button="@null"
                android:layout_width="25dp"
                android:layout_height="25dp">
        </CheckBox>
        <TextView
                android:id="@+id/tv_select_all"
                android:layout_toRightOf="@id/cb_select_all"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlackFont"
                android:text="全选">
        </TextView>
        <TextView
                android:id="@+id/tv_character"
                android:layout_toRightOf="@id/tv_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlackFont"
                android:text="合计:¥">
        </TextView>
        <TextView
                android:id="@+id/tv_total_price"
                android:layout_toRightOf="@id/tv_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlackFont"
                android:text="0.00">
        </TextView>
        <Button
                android:layout_alignParentRight="true"
                android:id="@+id/btn_pay"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="去结算(0)"
                android:textSize="16sp"
                android:background="@drawable/search_button_round"/>
    </RelativeLayout>
</RelativeLayout>